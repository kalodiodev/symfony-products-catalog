{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.attributes.index.head.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'admin.attributes.index.title'|trans }}</h1>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>{{ 'admin.attributes.table.id'|trans }}</th>
                <th>{{ 'admin.attributes.table.name'|trans }}</th>
                <th>{{ 'admin.attributes.table.description'|trans }}</th>
                <th>{{ 'admin.attributes.table.action'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for attribute in attributes %}
                <tr>
                    <td>{{ attribute.id }}</td>
                    <td>{{ attribute.name }}</td>
                    <td>{{ attribute.description }}</td>
                    <td>
                        <a class="btn btn-sm btn-warning"
                           href="#">
                            {{ 'admin.attributes.button.edit'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="#">
            {{ 'admin.attributes.button.add'|trans }}
        </a>
    </div>
{% endblock %}
