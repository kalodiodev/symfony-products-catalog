<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Dashboard Template for Bootstrap{% endblock %}</title>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}" >

    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="{{ asset('assets/css/dashboard.css') }}">

    {% block stylesheets %}{% endblock %}
</head>

<body>
<nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">{{ 'app.title'|trans }}</a>
    <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
    <ul class="navbar-nav px-4">
        <li class="nav-item text-nowrap">
            <a class="nav-link" href="{{ path('home') }}">{{ 'admin.menu.frontpage'|trans}}</a>
        </li>
    </ul>
</nav>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span data-feather="home"></span>
                            {{ 'admin.menu.dashboard'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'admin_categories' %} active {% endif %}>"
                           href="{{ path('admin_categories') }}">
                            <span data-feather="file"></span>
                            {{ 'admin.menu.categories'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'admin_brands' %} active {% endif %}>"
                           href="{{ path('admin_brands') }}">
                            <span data-feather="file"></span>
                            {{ 'admin.menu.brands'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'admin_products' %} active {% endif %}>"
                           href="{{ path('admin_products') }}">
                            <span data-feather="shopping-cart"></span>
                            {{ 'admin.menu.products'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'admin_users' %} active {% endif %}>"
                           href="{{ path('admin_users') }}">
                            <span data-feather="users"></span>
                            {{ 'admin.menu.users'|trans }}
                        </a>
                    </li>
                </ul>


                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>{{ 'admin.menu.options'|trans }}</span>
                </h6>
                <hr>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">
                            <span data-feather="log-out"></span>
                            {{ 'auth.logout'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main" class="mt-3 col-md-9 ml-sm-auto col-lg-10 px-4">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message|trans }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message|trans }}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </main>
    </div>
</div>

<script src="{{ asset('assets/runtime.js') }}"></script>
<script src="{{ asset('assets/js/bootstrap.js') }}"></script>
<script src="{{ asset('assets/js/feather.min.js') }}"></script>

<script>
    feather.replace()
</script>

{% block javascripts %}{% endblock %}

</body>
</html>
