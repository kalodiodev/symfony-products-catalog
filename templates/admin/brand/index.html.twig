{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.brands.index.head.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'admin.brands.index.title'|trans }}</h1>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>{{ 'admin.brands.table.id'|trans }}</th>
                <th>{{ 'admin.brands.table.name'|trans }}</th>
                <th>{{ 'admin.brands.table.details'|trans }}</th>
                <th>{{ 'admin.brands.table.action'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for brand in brands %}
                <tr>
                    <td>{{ brand.id }}</td>
                    <td>{{ brand.name }}</td>
                    <td>{{ brand.details }}</td>
                    <td>
                        <a class="btn btn-sm btn-warning"
                           href="#">
                            {{ 'admin.brands.button.edit'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="#">
            {{ 'admin.brands.button.add'|trans }}
        </a>
    </div>
{% endblock %}
