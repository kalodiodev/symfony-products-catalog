{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.categories.index.head.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'admin.categories.index.title'|trans }}</h1>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>{{ 'admin.categories.table.id'|trans }}</th>
                <th>{{ 'admin.categories.table.name'|trans }}</th>
                <th>{{ 'admin.categories.table.description'|trans }}</th>
                <th>{{ 'admin.categories.table.action'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.description }}</td>
                    <td>
                        <a class="btn btn-sm btn-warning"
                           href="{{ path('admin_categories_update', {'id': category.id}) }}">
                            {{ 'admin.categories.button.edit'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ knp_pagination_render(categories) }}

        <a class="btn btn-primary" href="{{ path('admin_categories_create') }}">
            {{ 'admin.categories.button.add'|trans }}
        </a>
    </div>
{% endblock %}
