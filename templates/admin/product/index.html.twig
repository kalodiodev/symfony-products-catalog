{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.products.index.head.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'admin.products.index.title'|trans }}</h1>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>{{ 'admin.products.table.id'|trans }}</th>
                    <th>{{ 'admin.products.table.title'|trans }}</th>
                    <th>{{ 'admin.products.table.description'|trans }}</th>
                    <th>{{ 'admin.products.table.action'|trans }}</th>
                </tr>
            </thead>

            <tbody>
                {% for product in products %}
                    <tr>
                        <td><a href="{{ path('admin_products_show', {'id': product.id}) }}">{{ product.id }}</a></td>
                        <td>{{ product.title }}</td>
                        <td>{{ product.description }}</td>
                        <td>
                            <a class="btn btn-sm btn-warning" href="">{{ 'admin.products.button.edit'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('admin_products_create') }}">{{ 'admin.products.button.add'|trans }}</a>
    </div>
{% endblock %}
