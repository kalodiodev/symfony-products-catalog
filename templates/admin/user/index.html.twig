{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'admin.users.index.head.title'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'admin.users.index.title'|trans }}</h1>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>{{ 'admin.users.table.id'|trans }}</th>
                <th>{{ 'admin.users.table.name'|trans }}</th>
                <th>{{ 'admin.users.table.email'|trans }}</th>
                <th>{{ 'admin.users.table.action'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a class="btn btn-sm btn-warning" href="">{{ 'admin.users.button.edit'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="#">{{ 'admin.users.button.add'|trans }}</a>
    </div>
{% endblock %}