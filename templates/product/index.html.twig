{% extends 'base.html.twig' %}

{% block title %}Welcome to Products Catalog{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-3">Products</h1>
        <hr>

        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <h3><a href="{{ path('product_show', {'id': product.id}) }}">{{ product.title }}</a></h3>
                    <p>{{ product.description }} <span>{{ product.price }}</span></p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}