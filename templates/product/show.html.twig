{% extends 'base.html.twig' %}

{% block title %}{{ 'page.product.head.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-3">{{ 'page.product.title'|trans }}</h1>
        <hr>

        <div class="row">
            <div class="col-md-12">
                <h3>{{ product.title }}</h3>
                <p>{{ product.description }}</p>
                <div>{{ product.price }}</div>
            </div>
        </div>
    </div>
{% endblock %}